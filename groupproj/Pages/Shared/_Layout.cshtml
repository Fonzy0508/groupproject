        <input type="password" id="PASSinpt" class="inp1" required />
        <button type="button" class="btnlg" onclick="loginNW()"><h5>Log in</h5></button>
        <hr style="width:35%; float:left; margin:20px 30px 20px 20px;" /><p style="float:left;" class="text-center"><b>  or </b> </p> <hr style="width:35%; float:right; margin:20px;" />
        <button type="button" class="btnlg" onclick="signupclc()"><h5>Sign up</h5></button>
    </div>
    <div id="signup-con" class="login">
        <button type="button" class="closebtn" id="closebtn1" onclick="closezybtn()"><h4 style="padding-top:5px;">X</h4></button>
        <img src="~/img/account.png" alt="acc logo" class="loginimg" />
        <h4 id="cng">E-mail</h4>
        <input type="text" id="SU-EMAILinpt" class="inp1" required /><br />
        <h4 id="cng">Password</h4>
        <input type="password" id="SU-PASSinpt" class="inp1" required />
        <button type="submit" class="btnlg" onclick="signup()"><h5>Sign up</h5></button>
    </div>
     

    <div id="addReminder" class="login">
        <button type="button" class="closebtn" id="closebtn2" onclick="closezybtn()"><h4 style="padding-top:5px;">X</h4></button>
        <img src="~/img/chronometer.png" alt="add logo" class="loginimg" />
        <h4 id="cng">Title</h4>
        <input type="text" id="add-RT" class="inp1" required /><br />
        <h4 id="cng">time</h4>
        <input type="text" id="add-RCH" class="time hour" value="Hour" onfocus="this.value = '';" required />
        <input type="text" id="add-RCM" class="time min" value="Mins" onfocus="this.value = '';" required />
        <input type="text" id="add-RCS" class="time sec" value="Secs" onfocus="this.value = '';" required />
        <button type="submit" class="btnlg" onclick="AddR()"><h5>Add now</h5></button>
    </div>

